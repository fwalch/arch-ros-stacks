
pkgdesc="ROS - The move_base package provides an implementation of an action (see the actionlib package) that, given a goal in the world, will attempt to reach it with a mobile base."
url='http://www.ros.org/'

pkgname='ros-hydro-move-base'
pkgver='1.11.6'
_pkgver_patch=1
arch=('i686' 'x86_64')
pkgrel=1
license=('BSD')

ros_makedepends=(ros-hydro-rotate-recovery
  ros-hydro-message-generation
  ros-hydro-nav-msgs
  ros-hydro-base-local-planner
  ros-hydro-costmap-2d
  ros-hydro-rospy
  ros-hydro-move-base-msgs
  ros-hydro-catkin
  ros-hydro-roscpp
  ros-hydro-geometry-msgs
  ros-hydro-navfn
  ros-hydro-std-srvs
  ros-hydro-nav-core
  ros-hydro-actionlib
  ros-hydro-clear-costmap-recovery
  ros-hydro-tf
  ros-hydro-visualization-msgs
  ros-hydro-dynamic-reconfigure
  ros-hydro-std-msgs
  ros-hydro-pluginlib)
makedepends=('cmake' 'git' 'ros-build-tools'
  ${ros_makedepends[@]})

ros_depends=(ros-hydro-rotate-recovery
  ros-hydro-rospy
  ros-hydro-navfn
  ros-hydro-roscpp
  ros-hydro-base-local-planner
  ros-hydro-message-runtime
  ros-hydro-move-base-msgs
  ros-hydro-tf
  ros-hydro-costmap-2d
  ros-hydro-geometry-msgs
  ros-hydro-std-srvs
  ros-hydro-nav-core
  ros-hydro-actionlib
  ros-hydro-clear-costmap-recovery
  ros-hydro-nav-msgs
  ros-hydro-visualization-msgs
  ros-hydro-dynamic-reconfigure
  ros-hydro-std-msgs
  ros-hydro-pluginlib)
depends=(${ros_depends[@]})

_tag=release/hydro/move_base/${pkgver}-${_pkgver_patch}
_dir=move_base
source=("${_dir}"::"git+https://github.com/ros-gbp/navigation-release.git"#tag=${_tag})
md5sums=('SKIP')

build() {
  # Use ROS environment variables
  /usr/share/ros-build-tools/clear-ros-env.sh
  [ -f /opt/ros/hydro/setup.bash ] && source /opt/ros/hydro/setup.bash

  # Create build directory
  [ -d ${srcdir}/build ] || mkdir ${srcdir}/build
  cd ${srcdir}/build

  # Fix Python2/Python3 conflicts
  /usr/share/ros-build-tools/fix-python-scripts.sh ${srcdir}/${_dir}

  # Build project
  cmake ${srcdir}/${_dir} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCATKIN_BUILD_BINARY_PACKAGE=ON \
        -DCMAKE_INSTALL_PREFIX=/opt/ros/hydro \
        -DPYTHON_EXECUTABLE=/usr/bin/python2 \
        -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 \
        -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so \
        -DSETUPTOOLS_DEB_LAYOUT=OFF
  make
}

package() {
  cd "${srcdir}/build"
  make DESTDIR="${pkgdir}/" install
}
