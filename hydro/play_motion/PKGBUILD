
pkgdesc="ROS - Plays a pre-recorded motion on a robot."
url='http://www.ros.org/'

pkgname='ros-hydro-play-motion'
pkgver='0.3.5'
_pkgver_patch=0
arch=('i686' 'x86_64')
pkgrel=1
license=('BSD')

ros_makedepends=(ros-hydro-play-motion-msgs
  ros-hydro-actionlib
  ros-hydro-sensor-msgs
  ros-hydro-joint-trajectory-controller
  ros-hydro-roscpp
  ros-hydro-robot-state-publisher
  ros-hydro-catkin
  ros-hydro-controller-manager-msgs
  ros-hydro-controller-manager
  ros-hydro-joint-state-controller
  ros-hydro-control-msgs
  ros-hydro-rostest)
makedepends=('cmake' 'git' 'ros-build-tools'
  ${ros_makedepends[@]})

ros_depends=(ros-hydro-roscpp
  ros-hydro-controller-manager-msgs
  ros-hydro-play-motion-msgs
  ros-hydro-control-msgs
  ros-hydro-actionlib)
depends=(${ros_depends[@]})

_tag=release/hydro/play_motion/${pkgver}-${_pkgver_patch}
_dir=play_motion
source=("${_dir}"::"git+https://github.com/pal-gbp/play_motion-release.git"#tag=${_tag})
md5sums=('SKIP')

build() {
  # Use ROS environment variables
  /usr/share/ros-build-tools/clear-ros-env.sh
  [ -f /opt/ros/hydro/setup.bash ] && source /opt/ros/hydro/setup.bash

  # Create build directory
  [ -d ${srcdir}/build ] || mkdir ${srcdir}/build
  cd ${srcdir}/build

  # Fix Python2/Python3 conflicts
  /usr/share/ros-build-tools/fix-python-scripts.sh ${srcdir}/${_dir}

  # Build project
  cmake ${srcdir}/${_dir} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCATKIN_BUILD_BINARY_PACKAGE=ON \
        -DCMAKE_INSTALL_PREFIX=/opt/ros/hydro \
        -DPYTHON_EXECUTABLE=/usr/bin/python2 \
        -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 \
        -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so \
        -DSETUPTOOLS_DEB_LAYOUT=OFF
  make
}

package() {
  cd "${srcdir}/build"
  make DESTDIR="${pkgdir}/" install
}
